<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.Userdao">
    <resultMap id="userResult" type="com.example.demo.domain.user">
        <id column="id" property="userId"></id>
        <result column="username" property="userName"></result>
        <result column="password" property="userPwd"></result>
        <result column="device_token" property="deviceToken"></result>
        <result column="pId" property="pId"></result>
        <result column="part" property="part"></result>
    </resultMap>
    <select id="selectbyName" parameterType="java.lang.String" resultMap="userResult">
        select id,username,password,p.pId,p.pName from water.user
            inner join part p
                on user.id = p.pId
                    where username=#{uName};
    </select>
    <select id="selectbyId" parameterType="java.lang.Integer" resultMap="userResult">
        select id,username,password,user.pId,p.pName part from water.user
            inner join part p
                on user.pId = p.pId
                    where uId=#{uId};
    </select>
    <update id="updatepwd" parameterType="user">
         update water.user set password=#{userpwd} where id=#{userid}
    </update>
    <select id="selectAll" resultMap="userResult">
        select id,username from water.user;
    </select>
</mapper>